<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_network"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载网络图片" />

    <Button
        android:id="@+id/btn_SD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载SD卡中图片" />

    <Button
        android:id="@+id/btn_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载本地资源中图片" />

    <Button
        android:id="@+id/btn_gif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载网络gif图片" />
    <Button
        android:id="@+id/btn_local_gif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加载资源gif图片" />
    <Button
        android:id="@+id/btn_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置缩略图比例,然后，先加载缩略图，再加载原图" />
    <Button
        android:id="@+id/btn_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在recyclerView中加载图片" />



    <Button
        android:id="@+id/btn_recyclerView_different"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在recyclerView中加载不同图片" />

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
